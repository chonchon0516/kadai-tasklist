Rails.application.routes.draw do
  # CRUD
  get 'taskss/:id', to: 'taskss#show'
  post 'taskss', to: 'taskss#create'
  put 'taskss/:id', to: 'taskss#update'
  delete 'taskss/:id', to: 'taskss#destroy'

  # index: show の補助ページ
  get 'taskss', to: 'taskss#index'

  # new: 新規作成用のフォームページ
  get 'taskss/new', to: 'taskss#new'

  # edit: 更新用のフォームページ
  get 'taskss/:id/edit', to: 'taskss#edit'
end